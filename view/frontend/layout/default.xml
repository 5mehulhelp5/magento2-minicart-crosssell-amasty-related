<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="minicart">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="crosssell" xsi:type="array">
                                    <item name="component" xsi:type="string">Blackbird_MinicartCrosssell/js/minicart-crosssell</item>
                                    <item name="displayArea" xsi:type="string">crosssell-area</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Blackbird_MinicartCrosssell/minicart-crosssell</item>
                                    </item>
                                    <item name="children" xsi:type="array">
                                        <item name="crosssell-items" xsi:type="array">
                                            <item name="component" xsi:type="string">Blackbird_MinicartCrosssell/js/view/minicart-crosssell-items</item>
                                            <item name="displayArea" xsi:type="string">crosssell-items</item>
                                            <item name="config" xsi:type="array">
                                                <item name="template" xsi:type="string">Blackbird_MinicartCrosssell/items/minicart-crosssell-items</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
